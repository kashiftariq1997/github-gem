<%= javascript_include_tag 'home' %>
<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6 text-center mt-4 centered-column-container div-height">
    <%= render '/shared/alerts' %>
  </div>
  <div class="col-md-3"></div>
</div>

<!-- Repositories Modal -->
<div class="modal fade show" id="repositoriesModal" tabindex="-1" role="dialog" aria-labelledby="repositoriesModalLabel" aria-hidden="true" style="display: block;">
  <div class="modal-dialog" role="document">
    <div class="modal-content" style="background-color: #2b2f35; border: 1px solid #565c67; box-shadow: 0 4px 8px rgba(0,0,0,0.15);">
      <div class="modal-header bg-color text-white">
        <h5 class="modal-title" id="repositoriesModalLabel">Fetched Repositories</h5>
        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body bg-color">
        <div id="alert-auth"></div>
        <div class="text-center mt-4">
          <% if @repositories.present? %>
            <%= form_with url: github_fetch_issues_path, method: :post, local: true do %>
              <div class="form-group">
                <label for="repository_id" style="color:white;">Select a Repository:</label>
                <select name="repository_id" id="repository_id" class="form-control">
                  <% @repositories.each do |repo| %>
                    <option value="<%= repo.id %>"><%= repo.name %></option>
                  <% end %>
                </select>
              </div>
              <!-- Flex container to space the buttons -->
              <div class="d-flex justify-content-between mt-4 mb-4">
                <%= button_to 'Cancel', root_path, class: 'btn btn-primary btn-lg', method: :get, style: 'margin-right: 10px; background-color: #9929BD; border-color: #9929BD' %>
                <%= button_tag 'Next', type: 'submit', class: 'btn btn-primary btn-lg', style: 'background-color: #9929BD; border-color: #9929BD' %>
              </div>
            <% end %>
          <% else %>
            <p style="color:white">No repositories available.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
