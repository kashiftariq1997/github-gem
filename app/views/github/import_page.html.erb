<%= javascript_include_tag 'home' %>
<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6 text-center mt-4 centered-column-container div-height">
    <%= render '/shared/alerts' %>
  </div>
  <div class="col-md-3"></div>
</div>

<!-- Repositories Modal -->
<div class="modal fade show" id="repositoriesModal" tabindex="-1" role="dialog" aria-labelledby="repositoriesModalLabel" aria-hidden="true" style="display: block;">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header bg-color text-white">
        <h5 class="modal-title" id="repositoriesModalLabel">Fetched Repositories</h5>
        <!-- Corrected button to close the modal -->
        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body bg-color">
        <div id="alert-auth"></div>
        <div class="text-center mt-4" style="max-height: 100px; overflow-y: auto;">
          <% if @repositories.present? %>
            <% @repositories.each do |repo| %>
              <p style="color:white"><%= repo.name %></p>
            <% end %>
          <% else %>
            <p style="color:white">No repositories available.</p>
          <% end %>
        </div>
        <div class="mt-4 mb-4 space-between-container">
          <%= button_to 'Cancel', root_path, id: 'cancel-button', class: 'btn btn-primary btn-lg cancel-button', method: :get %>
          <%= button_to 'Next', root_path, id: 'next-button', class: 'btn btn-primary btn-lg next-button', method: :get %>
        </div>
      </div>
    </div>
  </div>
</div>
